<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".MainActivity">

    <com.google.android.material.chip.Chip
        android:id="@+id/chipEsit"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:backgroundTint="#03A9F4"
        android:text="="
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/chip9"
        app:layout_constraintTop_toBottomOf="@+id/chipTopla" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipTopla"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#03A9F4"
        android:text="+"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/chip6"
        app:layout_constraintTop_toBottomOf="@+id/editTextSonuc" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipAC"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:backgroundTint="#03A9F4"
        android:text="AC"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/chip0"
        app:layout_constraintTop_toBottomOf="@+id/chip9" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip0"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#03A9F4"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip7" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#03A9F4"
        android:text="9"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/chip8"
        app:layout_constraintTop_toBottomOf="@+id/chip6" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#03A9F4"
        android:text="8"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/chip7"
        app:layout_constraintTop_toBottomOf="@+id/chip5" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#03A9F4"
        android:text="7"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip4" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#03A9F4"
        android:text="6"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/chip5"
        app:layout_constraintTop_toBottomOf="@+id/chip3" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#03A9F4"
        android:text="3"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/chip2"
        app:layout_constraintTop_toBottomOf="@+id/editTextSonuc" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#03A9F4"
        android:text="5"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/chip4"
        app:layout_constraintTop_toBottomOf="@+id/chip2" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#03A9F4"
        android:text="2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/chip1"
        app:layout_constraintTop_toBottomOf="@+id/editTextSonuc" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#03A9F4"
        android:text="4"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip1" />

    <EditText
        android:id="@+id/editTextSonuc"
        android:layout_width="286dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="200dp"
        android:background="#000000"
        android:backgroundTint="#03A9F4"
        android:ems="10"
        android:hint="SonuÃ§"
        android:inputType="number"
        android:textColorHint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        android:backgroundTint="#03A9F4"
        android:text="1"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSonuc" />

</androidx.constraintlayout.widget.ConstraintLayout>